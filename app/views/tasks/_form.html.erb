
<div class="form-group m-5">
<h1>Edit a task</h1>

<%= form_with model: task do |f| %>
  <%= f.label :title, class: "form-label" %>
  <%= f.text_field :title, class: "form-control" %>
  <%= f.label :details, class: "form-label" %>
  <%= f.text_field :details, class: "form-control" %>
  <% if !task.new_record? %>
  <%= f.label :completed, class: "form-label"%>
  <%= f.text_field :completd, class: "form-control" %>
   <%= f.submit class: "btn btn-primary mt-3" %>
  </div>
  <% end %>
<% end %>
